<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="30dp"
    tools:context="com.techease.salonidm.ui.fragments.EditBusinessInfo">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:hint="@string/merchant_name"
            android:id="@+id/merchant_name"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:hint="@string/merchant_email"
            android:foregroundGravity="right"
            android:id="@+id/merchant_email"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"
            android:hint="@string/salon_name"
            android:id="@+id/salon_name"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:layout_marginTop="5dp"
            android:hint="@string/phone"
            android:id="@+id/phone"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:layout_marginTop="5dp"
            android:hint="@string/website"
            android:id="@+id/website"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:layout_marginTop="5dp"
            android:hint="@string/address"
            android:id="@+id/address"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:layout_marginTop="5dp"
            android:hint="@string/city"
            android:id="@+id/city"
            />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:hint="@string/state"
            android:id="@+id/state"
            />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:hint="service_type"
            android:id="@+id/servicesType"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:hint="@string/licensed_number"
            android:id="@+id/licensed_number"
            />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="@string/save"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/edit_info"
        />

</LinearLayout>
