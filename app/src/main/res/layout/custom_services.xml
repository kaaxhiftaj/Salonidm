<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
       <!--&gt;-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16sp"
           >

            <!--<de.hdodenhof.circleimageview.CircleImageView-->
                <!--android:layout_width="80dp"-->
                <!--android:layout_height="80dp"-->
                <!--android:layout_margin="5sp"-->
                <!--android:src="@drawable/line"-->
                <!--android:id="@+id/service_image"-->
                <!--/>-->

            <ImageView
                android:id="@+id/service_image"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/bar"
                android:layout_centerVertical="true"
                android:layout_margin="5sp"/>

            <TextView
                android:id="@+id/service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/service_image"
                android:text="@string/portfolio"
                android:textSize="16dp"
                android:textColor="#000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/service_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_below="@id/service_name"
                android:layout_toRightOf="@id/service_image"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5sp"
                android:gravity="bottom"
                android:textSize="13dp"
                android:text="45$ for one hour" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center|right"
                android:layout_alignBaseline="@id/service_name"
                android:foregroundGravity="right|center"
                android:src="@drawable/greater"
                android:layout_centerVertical="true"
                android:id="@+id/edit_service"
                />

        </RelativeLayout>

    <!--</android.support.v7.widget.CardView>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999"
        android:layout_marginLeft="20sp"
        android:foregroundGravity="bottom"
        android:layout_below="@id/edit_service"/>
</LinearLayout>